{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Next.js specific overrides
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "incremental": true,
    "tsBuildInfoFile": ".next/cache/tsconfig.tsbuildinfo",
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "noPropertyAccessFromIndexSignature": false,
    "exactOptionalPropertyTypes": false,

    // Emit
    "noEmit": true,
    "jsx": "react-jsx",

    // Paths - override base paths with app-specific ones
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@modele/types": ["../../packages/types/src"],
      "@modele/types/theme": ["../../packages/types/dist/theme"],
      "@modele/types/portal": ["../../packages/types/dist/portal"],
      "@immoassist/reseau": ["../../packages/reseau/src"],
      "@immoassist/reseau/*": ["../../packages/reseau/src/*"],
      "@immoassist/transactions": ["../../packages/transactions/src"],
      "@immoassist/transactions/*": ["../../packages/transactions/src/*"],
      "@immoassist/ui": ["../../packages/ui/src"],
      "@immoassist/ui/*": ["../../packages/ui/src/*"],
      "@immoassist/config": ["../../packages/config/src"],
      "@immoassist/config/*": ["../../packages/config/src/*"],
      "@immoassist/admin": ["../../packages/admin/src"],
      "@immoassist/admin/*": ["../../packages/admin/src/*"],
      "@immoassist/profil": ["../../packages/profil/src"],
      "@immoassist/profil/*": ["../../packages/profil/src/*"],
      "@immoassist/formulaire": ["../../packages/formulaire/src"],
      "@immoassist/formulaire/*": ["../../packages/formulaire/src/*"]
    },

    // Next.js 16 specific
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "build",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "tests/**",
    "src/test/**",
    "playwright.config.ts",
    "../../packages"
  ],
  "typeAcquisition": {
    "enable": false
  }
}
